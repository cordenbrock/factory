@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Incident>;

<h1>Incidents</h1>

@if (@Model.Count == 0)
{
  <h3>No incident reports have been made</h3>
}

@foreach (Incident incident in Model)
{
  <li>@Html.ActionLink($"{incident.Title}", "Details", new { id = incident.IncidentId }) -- @incident.Date</li>
}

<p>@Html.ActionLink("Add new incident", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>